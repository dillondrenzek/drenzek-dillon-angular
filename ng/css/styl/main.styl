// * * Sections	
section
	Width-XS(12)
	float left
	padding-left StandardPadding
	padding-right StandardPadding
	Clearfix()
		
section
	&.full
		Width-XS(12)
		
	&.three-quarter
		Width-SM(9)
		Width-MD(12)
		Width-LG(9)
	
	&.two-third
		Width-SM(8)
		Width-MD(12)
		Width-LG(8)
	
	&.half
		Width-SM(6)
		Width-MD(12)
		Width-LG(6)
	
	&.third
		Width-SM(4)
		Width-MD(12)
		Width-LG(4)
	
	&.quarter
		Width-SM(3)
		Width-MD(12)
		Width-LG(3)
	
	

// * * * Section Headers
section
	header,
	.body,
	footer
		display block
		width 100%
		padding-left StandardPadding
		padding-right StandardPadding
		Clearfix()
			






