// Main Stylus Sheet
// v4.0

@import 'app'

*,
*:before,
*:after
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	margin 0
	padding 0
	position relative
	
html
	FiraSans(1rem, 400, Black, 0em, left)
	line-height 1em
	background White




// DEBUG measures
.debug
	.page, #site-title
		border 1px solid black
		// min-height 500px
		
	.page-column
		border 1px solid blue
		
	section
		border 1px solid green
		min-height 134px
		
	header
		border 1px solid red
		
	.body
		border 1px solid yellow





// Default
a
	text-decoration none
	color Red
	font-weight 400
	&:hover
		text-decoration underline

figure
	img
		display block
		width 100%
		height auto
		
img.landscape
	width 100%
	height auto
	
img.portrait
	width auto
	height 100%
	
table
	border 1px solid Light
	font-size 12px
	
	tbody
		display block
	th
		border-bottom 3px solid Dark
	td
		border 1px solid Dark
		
ul
	list-style-type none






//--- Positioning

.left,
.page-title,
.full,
.three-quarter,
.two-third,
.half,
.third,
.quarter
	float left
.right
	float right
	
section	
	&.full,
	&.page-title
		Width-XS(12)
	&.three-quarter
		Width-SM(9)
		Width-MD(12)
		Width-LG(9)
		
	&.two-third
		Width-SM(8)
		Width-MD(12)
		Width-LG(8)
		
	&.half
		Width-SM(6)
		Width-MD(12)
		Width-LG(6)
		
	&.third
		Width-SM(4)
		Width-MD(12)
		Width-LG(4)
		
	&.quarter
		Width-SM(3)
		Width-MD(12)
		Width-LG(3)
	

LogoWidth = 130px
LogoHeight = 174px
SiteTitleWidth = LogoWidth + (StandardPadding*2)
SiteTitleHeight = 65px
SiteBorderHeight = 36px
SiteHeaderHeight = 170px

// # Fixed
// Logo

#logo
	font-size 32px
	width LogoWidth
	height LogoHeight
	margin 0 auto
		

#site-title
	position fixed
	z-index 100
	top 0
	left 0
	width 100%
	height SiteTitleHeight

	+SM()
		width 100%
		height SiteTitleHeight

	+MD()
		width SiteTitleWidth
		height auto
	// header.site
	// 	float left
	// 	height SiteHeaderHeight
	// 	width SiteTitleWidth
	// #social-media
	// 	float left
	// 	width SiteTitleWidth
	
	// nav
	// 	float left
	// 	width SiteTitleWidth


#site-border
	position fixed
	z-index 99
	top 0
	left 0
	width 100%
	height 36px

#social-media
	list-style-type none
	li
		display inline-block
		width 25%
		a
			width 100%
			display block
			text-align center
		i
			font-size 18px
	+XS()
		li
			a
				padding-top ThinPadding

	+SM()
		width SiteTitleWidth
		li
			a
				padding-top StandardPadding

nav
	width 100%
	ul
		width 100%
	li
		width 100%
		display block
	a
		display block
		text-align center
		width 100%


// * Page
#page
	width 100%
	margin-top SiteTitleHeight
	padding-left 0
	Clearfix()
	
	+MD()
		margin-top SiteBorderHeight
		padding-left SiteTitleWidth
		
