LogoWidth = 130px
LogoHeight = 174px
SMLogoWidth = 49px
SMLogoHeight = 65px
SiteTitleWidth = LogoWidth + (ThickPadding*2)
SiteTitleHeight = 65px
SiteBorderHeight = 36px
SiteHeaderHeight = 170px

// # Fixed
#logo
	margin 0 auto
	z-index 100
	+XS()
		font-size 11.94px
		width SMLogoWidth
		height SMLogoHeight
	+SM()
		font-size 11.94px
		width SMLogoWidth
		height SMLogoHeight
	+MD()
		font-size 32px
		width LogoWidth
		height LogoHeight

#site-title
	position fixed
	z-index 100
	top 0
	left 0
	width 100%
	height SiteTitleHeight
	

	+SM()
		width 100%
		height SiteTitleHeight

	+MD()
		width SiteTitleWidth
		height auto
	header.site
		padding-left 45px
		padding-right 15px

#site-border
	position fixed
	z-index 95
	top 0
	left 0
	width 100%
	height SiteBorderHeight

