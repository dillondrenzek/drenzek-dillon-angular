// Default
li
	list-style-type circle
	list-style-position inside
	FiraSans(1rem, 400, Black, 0em, left)
	// font-style italic

figure
	padding 0 !important
	img
		display block
		width 100%
		height auto
	img.portrait
		width auto
		height 100%



LogoWidth = 130px
LogoHeight = 174px
SiteTitleWidth = LogoWidth + (StandardPadding*2)
SiteTitleHeight = 65px
SiteBorderHeight = 36px
SiteHeaderHeight = 170px


//--- Positioning

.left,
.page-title,
.full,
.three-quarter,
.two-third,
.half,
.third,
.quarter
	float left
.right
	float right
	
.full,
.page-title
	Width-XS(12)
.three-quarter
	Width-XS(12)
	Width-MD(9)
.two-third
	Width-XS(12)
	Width-MD(8)
.half
	Width-XS(12)
	Width-MD(6)
.third
	Width-XS(12)
	Width-MD(4)
.quarter
	Width-XS(12)
	Width-MD(3)

// # Fixed
#site-title
	position fixed
	z-index 100
	top 0
	left 0
	width 100%
	height SiteTitleHeight

	+SM()
		width 100%
		height SiteTitleHeight

	+MD()
		width SiteTitleWidth
		height auto

#site-border
	position fixed
	z-index 99
	top 0
	left 0
	width 100%
	height SiteBorderHeight





// * Page
#page
	width 100%
	margin-top SiteTitleHeight
	padding-left 0
	Clearfix()
	
	+MD()
		margin-top SiteBorderHeight
		padding-left SiteTitleWidth
		
.page-title
	height LogoHeight - SiteBorderHeight
	header.page
		position absolute
		left 0
		bottom 0
		padding-left StandardPadding
		padding-right StandardPadding
		padding-bottom StandardPadding
	li
		padding-right StandardPadding

		
	
// * * Sections	
section
	Width-XS(12)
	float left
	padding-left StandardPadding
	padding-right StandardPadding
	margin-bottom ThickPadding
	Clearfix()
	&.page-title
		margin-bottom 0
	
section
	&.full
		Width-XS(12)
		
	&.three-quarter
		Width-SM(9)
		Width-MD(12)
		Width-LG(9)
	
	&.two-third
		Width-SM(8)
		Width-MD(12)
		Width-LG(8)
	
	&.half
		Width-SM(6)
		Width-MD(12)
		Width-LG(6)
	
	&.third
		Width-SM(4)
		Width-MD(12)
		Width-LG(4)
	
	&.quarter
		Width-SM(3)
		Width-MD(12)
		Width-LG(3)
	

// * * * Section Divisions (Header, .body, footer)
section
	header,
	.body,
	footer
		display block
		width 100%
		Clearfix()

section
	header
		padding StandardPadding 0


// * * * * Content		
ul.line
	InlineChildren(middle)
	li
		InlineChildren(middle)
	
ul.block
	li
		display block
		InlineChildren(middle)
		
ul.line.skills
	padding StandardPadding 0
	li
		margin ThinPadding
		&:first-child
			margin-left 0

ul.block.bullets
	li
		margin-bottom StandardPadding

		
li.link
	margin-bottom StandardPadding
	InlineChildren(middle)
	a
		InlineChildren(middle)
	i
		padding-right StandardPadding
		

		


// * * * * Project

.project
	margin-bottom ThickPadding

	header,
	.body,
	footer
		display block
		width 100%
		padding-left StandardPadding
		padding-right StandardPadding
		Clearfix()

	ul.line
		li
			display inline-block
	ul.block
		li
			diplay block

// * * * * Logo
#logo
	height LogoHeight
	width LogoWidth
	font-size 32px
	left StandardPadding
	











