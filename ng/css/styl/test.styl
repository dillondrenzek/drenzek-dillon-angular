// * Page
#page
	width 100%
	display block
	
	+XS()
		margin-top SiteTitleHeight
		padding-left 0
	+SM()
		margin-top SiteTitleHeight
		padding-left 0
	+MD()
		margin-top SiteBorderHeight
		padding-left SiteTitleWidth

	

		
		
	
// * * Sections	
section
	Width-XS(12)
	display inline-block
	vertical-align top
	float left
	// padding-left StandardPadding
	// padding-right StandardPadding
	margin-bottom ThickPadding
	Clearfix()
	&.page-title
		margin-bottom 0

// Responsive Widths
section	
	&.full,
	&.page-title
		Width-XS(12)
	&.three-quarter
		Width-SM(9)
		Width-MD(12)
		Width-LG(9)
		
	&.two-third
		Width-SM(8)
		Width-MD(12)
		Width-LG(8)
		
	&.half
		Width-SM(6)
		Width-MD(12)
		Width-LG(6)
		
	&.third
		Width-SM(4)
		Width-MD(12)
		Width-LG(4)
		
	&.quarter
		Width-SM(3)
		Width-MD(12)
		Width-LG(3)		

header.page
	display block
	+XS()
		height auto
	+SM()
		height auto
	+MD()
		height auto
		min-height LogoHeight - SiteBorderHeight
		
header.page > *
	+XS()
		display block
	+MD()
		display inline-block
		vertical-align bottom
		
section .body > *
	+XS()
		display block
	+MD()
		display inline-block
		vertical-align middle


