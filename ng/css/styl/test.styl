//--- Positioning

.left,
.full,
.three-quarter,
.two-third,
.half,
.third,
.quarter
	float left
.right
	float right
	
.full
	Width-XS(12)
.three-quarter
	Width-XS(12)
	Width-MD(9)
.two-third
	Width-XS(12)
	Width-MD(8)
.half
	Width-XS(12)
	Width-MD(6)
.third
	Width-XS(12)
	Width-MD(4)
.quarter
	Width-XS(12)
	Width-MD(3)


SiteTitleWidth = 130px + (StandardPadding*2)
SiteTitleHeight = 65px
SiteBorderHeight = 36px
SiteHeaderHeight = 170px

// # Fixed
#site-title
	position fixed
	z-index 100
	top 0
	left 0
	overflow hidden
	header.site
		float left
		height SiteHeaderHeight
		width SiteTitleWidth
	#social-media
		float left
		width SiteTitleWidth
	
	nav
		float left
		width SiteTitleWidth

	+SM()
		width SiteTitleWidth
		height auto
	+XS()
		width 100%
		height SiteTitleHeight
		padding-left SiteTitleWidth
		header.site
			position absolute
			left 0
			bottom 0

#site-border
	position fixed
	z-index 99
	top 0
	left 0
	width 100%
	height 36px





// * Page
.page
	width 100%
	Clearfix()
	+SM()
		margin-top SiteBorderHeight
		padding-left SiteTitleWidth
	+XS()
		margin-top SiteTitleHeight
		padding-left 0
		
	
// * * Sections	
section
	Width-XS(12)
	float left
	padding-left StandardPadding
	padding-right StandardPadding
	Clearfix()
	
	

// * * * Section Headers
header
	display block
	Clearfix()
	
	
header.site,
header.page
	// height 174px
	
// * * * Section Body
.body
	display block
	width 100%
	padding-left StandardPadding
	padding-right StandardPadding
	Clearfix()
	
// * * * * * Section Columns
.section-column
	display inline-block





