@import 'base'




.page
	background White
	margin-top 36px
	
	// Sections
	// - characterized by the top border
	section
		position relative
		padding 0 StandardPadding
		padding-bottom ThickPadding

		header
			position relative
			padding StandardPadding 0
			border-top 1px solid Gray
			&>*
				display inline-block
				vertical-align middle
			h3
				Char-SectionTitle(Black)
			a
				Char-HeaderLinks()
				float right

		// Section Types
			
		&.title // along the top of the page
			padding-bottom 0
			height 138px
			h2
				Char-PageTitle()
				position absolute
				bottom 0
				left StandardPadding
			a
				Char-HeaderLinks()
				display block
				position relative
				top 50%
				TranslateY(-100%)
				padding-bottom StandardPadding
		
