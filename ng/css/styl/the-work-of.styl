		&.list-3-column // 3 columns for lists only
			Width-MD(12)
			
			.project
				Width-MD(4)
				display inline-block
				vertical-align top
				padding-right StandardPadding
				margin-right 0
				margin-bottom ThickPadding
				&:first-child
					padding-left 0
				
				&>*
					Width-MD(12)
					display block
					
				figure
					background none
					border-bottom 1px solid Dark

				.title
					Width-MD(12)
					margin-top ThinPadding
					padding-bottom StandardPadding
					a
						Char-HeaderLinks()
						font-weight 700
					.primary
						Char-SmallItemPrimary()
						padding-bottom 0
					.secondary
						Char-SmallItemSecondary()
						font-weight 400
					.body
						Char-Body()
						color Black
					
					
		&.list-category
			.category
				padding-left StandardPadding
				margin-bottom StandardPadding
				&:last-child
					margin-bottom 0
				h4
					Char-SectionSubtitle()
					text-transform uppercase
				ul
					padding-left StandardPadding
				.skill
					padding-bottom (StandardPadding/2)
		


		&.list-standard
			ul
				padding-left StandardPadding
				.skill
					padding-bottom StandardPadding

		&.admin
			td
				border-bottom 1px solid Light
				&.action
					// border-bottom none


.slide-indicator
	Width-MD(4)
	Char-SectionSubtitle()
	position absolute
	right 0
	bottom 0
	TranslateY(100%)
	&>*
		display inline-block	
	.arrow
		text-align center
		cursor pointer
		Width-MD(3)
	.indicator
		text-align center
		Width-MD(6)
				


li.skill
	InlineChildren(middle)
	.title
		// Char-MediumItemPrimary()
		Char-SmallItemPrimary()
		Width-MD(10)
	.value
		Char-MediumItemValue()
		Width-MD(2)
	
.secondary
