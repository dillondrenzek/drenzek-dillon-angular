// ! All @font-face, text style Mixins




// @font-face (Fira Sans)
@font-face 
	font-family 'Fira Sans'
	font-weight 200
	src 	url("../../fonts/FiraSans-Light.woff") format('woff'),
			url("../../fonts/FiraSans-Light.ttf") format('truetype'),
			url("../../fonts/FiraSans-Light.eot")
			
@font-face 
	font-family 'Fira Sans'
	font-weight 400
	src 	url("../../fonts/FiraSans-Regular.woff") format('woff'),
			url("../../fonts/FiraSans-Regular.ttf") format('truetype'),
			url("../../fonts/FiraSans-Regular.eot")
			
@font-face 
	font-family 'Fira Sans'
	font-weight 700
	src 	url("../../fonts/FiraSans-Bold.woff") format('woff'),
			url("../../fonts/FiraSans-Bold.ttf") format('truetype'),
			url("../../fonts/FiraSans-Bold.eot")

FiraSans($size, $weight, $color, $spacing, $align) 
	font-family 'Fira Sans', Helvetica, sans-serif
	font-size $size
	font-weight $weight
	color $color
	letter-spacing $spacing
	text-align $align
	
Char-Default()
	FiraSans(16px, 400, Black, -1px, left)




// Character Styles
Char-SiteNavLinks()
	FiraSans(1rem, 400, Red, 0.0714285em, center)



Char-HeaderLinks()
	FiraSans(0.875rem, 400, Red, 0.0714285em, left)
	text-transform uppercase


Char-MediumItemPrimary()
	FiraSans(1.5rem, 700, Black, -0.027916em, left)
	line-height 1em
	
// TODO: combine these somehow
Char-MediumItemSecondary($color)
	FiraSans(0.875rem, 200, $color, 0.0714285em, left)
	text-transform uppercase
Char-MediumItemSecondary()
	FiraSans(0.875rem, 200, Red, 0.0714285em, left)
	text-transform uppercase
	


Char-MediumItemValue()
	FiraSans(1.5rem, 200, Black, 0.083333em, center)
	line-height 1.125em
	


Char-SmallItemPrimary()
	FiraSans(0.875rem, 700, Black, -0.027916em, left)
	// line-height 1em
	


Char-Body()
	FiraSans(1rem, 200, Dark, 0.025em, left)
	line-height 1.125em
	


PersonalQuote($size, $weight, $color, $spacing, $align)
	FiraSans($size, $weight, $color, $spacing, $align)
	font-style italic




