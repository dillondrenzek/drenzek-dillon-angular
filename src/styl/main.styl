@import 'app'

*,
*:before,
*:after
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	margin 0
	padding 0
	position relative
	
html
	FiraSans(16px, 400, Black, 0em, left)
	line-height 1em
	background White
	
a
	text-decoration none
	color Red
	font-weight 400
	&:hover
		text-decoration underline

figure
	img
		display block
		width 100%
		height auto
		
img.landscape
	width 100%
	height auto
	
img.portrait
	width auto
	height 100%
	
table
	border 1px solid Light
	font-size 12px
	
	tbody
		display block
	th
		border-bottom 3px solid Dark
	td
		border 1px solid Dark
		
li
	list-style-type circle
	list-style-position inside
	FiraSans(1rem, 400, Black, 0em, left)	

