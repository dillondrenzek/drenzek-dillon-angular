//- Entry List
mixin EntryList
  ul.entry-list.row
    block


  
//- Entry List Item
mixin EntryListItem(mode)
  - mode = mode.toLowerCase()
  
  case mode
    when 'narrow'
      li.entry.col-xs-12.col-md-10.offset-md-1.col-lg-8.offset-lg-2
        block
    when 'grid'
      li.entry.col-xs-12.col-md-6.col-lg-4
        block
    when 'full'
    default
      li.entry.col-12
        block



//- Entry
mixin Entry
  .Entry&attributes(attributes)
    block


    
//- Entry Header
mixin EntryHeader
  header
    block



//- Entry Title
mixin EntryTitle(title_1, title_2)
  .row.no-gutters.justify-content-between.align-items-end
    if (title_1)
      .col.col-left
        .heading-1= title_1
    if (title_2)
      .col-auto.col-right
        .heading-2= title_2



//- Entry Subtitle
mixin EntrySubtitle(subtitle_1, subtitle_2)
  .row.no-gutters.justify-content-between
    if (subtitle_1)
      .col.col-left
        .subtitle-1= subtitle_1
    if (subtitle_2)
      .col-auto.col-right
        .subtitle-2= subtitle_2
  


//- Entry Description
mixin EntryDescription(desc)
  .row.no-gutters
    .col
      p= desc



//- Entry Image
mixin EntryImage(src, alt, width, height=150)
  - var ht = (height.replace) ? height.replace('px', '') + "px" : height+"px";
  figure(style={height: ht})
    img(src=src, alt=alt, width=width)
  
