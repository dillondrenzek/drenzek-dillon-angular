extends ../default

block page
  
  .photo#about-photo(style=`background-image:url('${ page.titleImageUrl }');`)
  
  //- Experience
  section#experience
    .container
      header.justify-content-center
        h2 Experience
      +EntryList
        each e in experience.entries
          +EntryListItem('narrow')
            +Entry
              +EntryHeader
                +EntryTitle(e.title, e.duration)
                +EntrySubtitle(e.location, e.dates)
              +EntryDescription(e.description)
    
  //- Education
  section#education
    .container
      header.justify-content-center
        h2 Education
      +EntryList
        each e in education.entries
          +EntryListItem('narrow')
            +Entry
              +EntryHeader
                +EntryTitle(e.title, e.dates)
                +EntrySubtitle(e.location, e.status)
              +EntryDescription(e.description)
