doctype
html
  head
    title Dillon Drenzek | v5
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
      
    link(rel="stylesheet" href="/node_modules/font-awesome/css/font-awesome.min.css")
    link(rel="stylesheet" href="/static/style/bootstrap/bootstrap-custom.min.css")
    link(rel="stylesheet" href="/static/style/main.css")
      
    script(src="/vendor/jquery-3.2.1.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js")
    script(src="/vendor/bootstrap/dist/js/bootstrap.min.js")
    
    include ./includes/favicon
    //- include ./includes/analytics
    
  body
    
    //- Fixed Nav Bar
    .fixed-top
      include nav
    
    //- Scrolling page
    .container.page
        
      //- Intro Section  
      section.row#intro
        
        //- portrait
        .col-12
          .row.justify-content-center
            figure
              img(src="/static/img/portrait.jpg" height="184" width="184")
        
        //- text
        .col-12
          .row.justify-content-center
            h1 I'm Dillon 
            //- Drenzek
          .row.justify-content-center
            h2 A Professional Web Developer
            
      //- List Item Header
      mixin ListItem(l_title, l_subtitle, r_title, r_subtitle)
        .ListItem
          header
            .row.justify-content-between
              .col.left-title= l_title
              .col.right-title.text-right= r_title
            .row.justify-content-between
              .col.left-subtitle= l_subtitle
              .col.right-subtitle.text-right= r_subtitle
      
      section.row.justify-content-center#experience
        header.col-12.text-center
          h1 Experience
      
        .col-12.list-item
          +ListItem('Web Application Developer', 'Vizualiiz (Woodinville, WA)', '1 yr 4 mos', 'Feb 2016 - Jun 2017')
        .col-12.list-item
          +ListItem('iOS Developer', 'Native (Boulder, CO)', '1 yr 3 mos', 'Feb 2014 - May 2015')
          
          
      section.row.justify-content-center#education
        header.col-12.text-center
          h1 Education
      
        .col-12.list-item
          +ListItem('Computer Science, B.A.', 'University of Colorado at Boulder', 'May 2015', 'Graduated')
    
    
    footer.row.no-gutters.justify-content-center
      .text-center
        span drenzek.com 
        a(href=githubUrl) v5.0.0-alpha.1
